<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyPictureOfTheDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?mainColor</item>
        <item name="colorPrimaryVariant">?secondColor</item>
        <item name="colorOnPrimary">@color/design_default_color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>

        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?mainColor</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/MyStyle</item>
    </style>

    <style name="MyStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>

    <style name="MainTheme" parent="Theme.MyPictureOfTheDay">
        <item name="mainColor">@color/color_primary</item>
        <item name="secondColor">@color/color_on_primary</item>
        <item name="fonColor">@color/color_primary_fon</item>
    </style>

    <style name="MyGreenTheme" parent="Theme.MyPictureOfTheDay">
        <item name="mainColor">@color/green</item>
        <item name="secondColor">@color/gray</item>
        <item name="fonColor">@color/green_fon</item>
    </style>

    <style name="MyRedTheme" parent="Theme.MyPictureOfTheDay">
        <item name="mainColor">@color/red</item>
        <item name="secondColor">@color/black</item>
        <item name="fonColor">@color/red_fon</item>
    </style>

</resources>